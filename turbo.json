{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".github/workflows/main.yaml", ".github/docker/config.sh"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "docs": {
      "dependsOn": ["build"],
      "outputs": ["docs"]
    },
    "docker:build": {
      "env": ["TURBO_API", "TURBO_TEAM", "TURBO_TOKEN"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "//#format:check": {
      "outputs": []
    },
    "publish": {
      "dependsOn": ["build"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
