{
  "name": "backend",
  "private": true,
  "type": "module",
  "dockerfileType": "node",
  "scripts": {
    "build": "tsc",
    "ci": "run-p lint typecheck test:coverage build",
    "clean": "rm -rf build coverage",
    "dev": "NODE_ENV=development tsx watch --env-file=.env src/main.ts",
    "docker:build": "cd ../.. && APP=backend APP_TYPE=node .github/docker/build-app.sh",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "npm run lint -- --fix",
    "start": "NODE_ENV=production node ./build/main.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@repo/database": "*",
    "drizzle-orm": "0.32.1",
    "effect": "3.5.8",
    "fastify": "4.28.1",
    "fastify-graceful-shutdown": "4.0.1",
    "postgres": "3.4.4"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tsconfig": "*",
    "@types/node": "20.14.12",
    "@vitest/coverage-v8": "2.0.4",
    "eslint": "9.7.0",
    "pino-pretty": "11.2.2",
    "tsx": "4.16.2",
    "typescript": "5.5.4",
    "vitest": "2.0.4"
  }
}
