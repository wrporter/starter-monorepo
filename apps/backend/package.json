{
  "name": "backend",
  "private": true,
  "type": "module",
  "dockerfileType": "node",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "ci": "run-p lint typecheck test:coverage build",
    "clean": "rm -rf build coverage",
    "dev": "NODE_ENV=development tsx watch --env-file=.env src/main.ts",
    "docker:build": "cd ../.. && apps/backend/.ci/docker-build.sh",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "npm run lint -- --fix",
    "start": "npm run build && NODE_ENV=production node ./build/main.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@repo/database": "*",
    "@wesp-up/express": "3.0.1",
    "drizzle-orm": "0.36.4",
    "express": "4.21.1",
    "postgres": "3.4.5",
    "prom-client": "15.1.3",
    "uuid": "11.0.3"
  },
  "devDependencies": {
    "@types/node": "22.10.0",
    "@types/supertest": "6.0.2",
    "@types/uuid": "10.0.0",
    "@vitest/coverage-v8": "2.1.6",
    "@wesp-up/eslint-config": "2.1.0",
    "@wesp-up/tsconfig": "2.0.0",
    "eslint": "9.15.0",
    "supertest": "7.0.0",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "vitest": "2.1.6"
  }
}
