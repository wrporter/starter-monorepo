{
  "name": "frontend",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "dockerfileType": "node",
  "scripts": {
    "build": "npm run build:remix && npm run build:server",
    "build:remix": "remix vite:build",
    "build:server": "tsc --project ./tsconfig.server.json",
    "clean": "rm -rf build",
    "dev": "tsx watch --clear-screen=false --enable-source-maps --ignore \".cache/**\" --ignore \"app/**\" --ignore \"vite.config.ts.timestamp-*\" --ignore \"build/**\" --ignore \"node_modules/**\" server/main.ts",
    "docker:build": "cd ../.. && apps/frontend/.ci/docker-build.sh",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "npm run lint -- --fix",
    "start": "NODE_ENV=production node --enable-source-maps ./build/main.js",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@emotion/cache": "11.13.5",
    "@emotion/react": "11.13.5",
    "@emotion/styled": "11.13.5",
    "@mcansh/remix-fastify": "4.0.3",
    "@mui/icons-material": "6.1.9",
    "@mui/material": "6.1.9",
    "@remix-run/node": "2.15.0",
    "@remix-run/react": "2.15.0",
    "@remix-run/serve": "2.15.0",
    "fastify": "5.1.0",
    "fastify-graceful-shutdown": "4.0.1",
    "isbot": "5.1.17",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "2.15.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@wesp-up/eslint-config": "2.1.0",
    "@wesp-up/eslint-config-react": "2.1.0",
    "autoprefixer": "10.4.20",
    "eslint": "9.15.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.49",
    "tailwindcss": "3.4.15",
    "typescript": "5.7.2",
    "vite": "6.0.1",
    "vite-tsconfig-paths": "5.1.3"
  }
}
