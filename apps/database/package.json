{
  "name": "database",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && cp -r migrations build/migrations",
    "ci": "run-p lint typecheck build",
    "clean": "rm -rf build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "docker:build": "cd ../.. && APP=database APP_TYPE=node .ci/build-app.sh",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "npm run lint -- --fix",
    "start": "NODE_ENV=production node ./build/main.js",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@repo/database": "*",
    "drizzle-kit": "0.23.0",
    "drizzle-orm": "0.32.0",
    "postgres": "3.4.4"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tsconfig": "*",
    "@types/node": "20.14.10",
    "eslint": "8.57.0",
    "typescript": "5.5.3"
  }
}
